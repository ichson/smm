<!DOCTYPE html>
<html lang="en">
   
  <head>
    <%-include("./partials/head")-%>
  </head>
  <body>
    <div
      id="toggleWrap"
      class="fixed z-[99] top-[20px] lg:left-[240px] left-[20px] lg:hidden"
    >
      <button class="bg-[#111827] p-3 rounded-full" id="toggleMenu">
        <img src="./icons/menu.svg" alt="" width="25" height="25" />
      </button>
    </div>

    <div class="container-fluid">
      <div class="flex">
        <!-- Sidebar -->
        <div class="w-[302px] hidden lg:block" id="sidebar">
          <%-include("./partials/sidebar")-%>
        </div>

        <!-- main -->
        <div id="main" class="lg:w-[calc(100%_-_302px)] w-full">
          <div class="mx-5 my-[50px]">
            <div class="bg-[#171e2e] w-full lg:max-w-[800px] rounded-[8px] p-5">
              <span
                class="uppercase font-medium text-[#9ca3af] text-sm mb-5 block"
                >Your Verified Users</span
              >

              <div class="sm:flex justify-between items-center">
                <div class="sm:flex items-end">
                  <h1 class="text-white font-[500] text-xl uppercase">
                    <span class="text-3xl font-bold">8</span> Verified Users
                  </h1>

                  <div class="mt-2 sm:mt-0 flex items-center ml-3 mb-[3px]">
                    <img
                      src="./icons/up-arrow-alt.svg"
                      width="20"
                      height="20"
                      alt=""
                    />
                    <span class="text-[#22c55e] font-[500] text-sm ml-1"
                      >5.5 (10%)</span
                    >
                  </div>
                </div>

                <div class="mt-5 md:mt-0">
                  <button
                    class="bg-[#111827] py-2 px-4 rounded-[10px] text-white text-sm"
                  >
                    WEEK
                  </button>

                  <button
                    class="transition hover:bg-[#111827] py-2 px-4 rounded-[10px] text-white text-sm"
                  >
                    MONTH
                  </button>
                </div>
              </div>

              <div class="flex items-center my-5">
                <img src="./icons/rotate.svg" width="18" height="18" alt="" />
                <span class="text-[#9ca3af] text-sm font-[500] ml-2"
                  >June 7, 2021 10:00AM</span
                >
              </div>

              <div id="chart"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
      var options = {
        series: [
          {
            name: "series1",
            data: [80, 80, 50, 89, 80, 109, 100],
          },
        ],
        colors: ["#5d2a8c"],
        chart: {
          height: 350,
          type: "area",
          fontFamily: "Fira Code, monospace",
          foreColor: "#9ca3af",
        },
        grid: {
          xaxis: {
            lines: {
              show: false,
            },
          },

          yaxis: {
            lines: {
              show: false,
            },
          },
        },
        dataLabels: {
          enabled: false,
        },
        stroke: {
          curve: "smooth",
        },
        xaxis: {
          categories: ["SAT", "SUN", "MON", "TUE", "WED", "THU", "FRI"],
          style: {
            fontSize: "12px",
            color: "#fff",
            background: "#00E396",
          },
        },
      };

      var chart = new ApexCharts(document.querySelector("#chart"), options);
      chart.render();
    </script>

    <script src="./js/app.js"></script>
  </body>
</html>
